    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-perf-standard": "^1.0.3",
    "eslint-plugin-promise": "^6.0.0",
    "form-data": "^4.0.0",
    "lerna": "^4.0.0",
    "lru-cache": "^6.0.0",
    "mkcert": "^1.5.0",
    "pre-commit": "^1.2.2",
    "tmp": "^0.2.1",
    "ws": "^8.6.0"
  }
